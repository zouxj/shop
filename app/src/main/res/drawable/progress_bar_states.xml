<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerColor="@color/app_theme_red"
                android:endColor="@color/app_theme_red"
                android:startColor="@color/app_theme_red_40" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:centerColor="@color/app_theme_red"
                    android:endColor="@color/app_theme_red"
                    android:startColor="@color/app_theme_red_40" />
            </shape>
        </clip>
    </item>

</layer-list>