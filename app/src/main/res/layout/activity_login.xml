<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shenyu.laikaword.module.login.ui.activity.LoginActivity">

    <ImageView
        android:layout_marginTop="31dp"
        android:id="@+id/iv_login_close"
        android:layout_width="45dp"
        android:scaleType="center"
        android:src="@mipmap/login_close_icon"
        android:layout_height="45dp" />
    <TextView
        android:layout_width="wrap_content"
        android:text="登录"
        android:layout_marginTop="76dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_333"
        android:textSize="18sp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="147dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="307dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_login_rectangle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="+86"
                android:textColor="@color/color_666"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="1dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/login_bg"
                android:layout_height="10dp" />
            <com.shenyu.laikaword.ui.view.widget.ClearEditText
                android:layout_marginLeft="5dp"
                android:id="@+id/et_use_phone"
                android:hint="请输入手机号"
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_15sp"
                android:textColorHint="@color/color_ccc"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:layout_height="35dp"
                android:maxLength="11"
               android:background="@null"
                android:inputType="phone"
              />

        </LinearLayout>

<RelativeLayout
    android:layout_height="45dp"
    android:layout_width="307dp"
    android:layout_marginTop="11dp"
    android:background="@drawable/bg_login_rectangle"
    >
    <EditText
        android:id="@+id/et_user_msg_code"
        android:layout_width="131dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:maxLength="6"
        android:textSize="@dimen/text_size_14sp"
        android:textColorHint="@color/color_ccc"
        android:hint="请输入短信验证码"
        android:gravity="center_vertical"
        android:textColor="@color/color_333"
        android:layout_marginLeft="25dp"
        android:inputType="number"
        android:background="@null"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tv_send_msg_code"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/app_theme_red"
        android:layout_gravity="center"
        android:text="获取验证码"
        android:layout_height="wrap_content" />
</RelativeLayout>


    <TextView
        android:layout_marginTop="37dp"
        android:id="@+id/bt_login"
        android:layout_height="45dp"
        android:layout_width="307dp"
        android:gravity="center"
        android:text="进入商城"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/bg_bt_login_rectangle_light"
        android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="35dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="75dp"
                android:layout_gravity="center_vertical"
                android:background="@color/login_bg"
                android:layout_height="1dp" />
            <TextView
                android:text="社交账户一键登录"
                android:textColor="@color/color_999"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="75dp"
                android:layout_gravity="center_vertical"
                android:background="@color/login_bg"
                android:layout_height="1dp"/>
        </LinearLayout>




<LinearLayout
    android:layout_marginBottom="61dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">



    <ImageView
    android:id="@+id/tv_wechat_login"
    android:layout_width="wrap_content"

    android:background="@mipmap/login_wechat_icon"
    android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/tv_qq_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:background="@mipmap/login_qq_icon" />
</LinearLayout>
    </LinearLayout>
</RelativeLayout>
