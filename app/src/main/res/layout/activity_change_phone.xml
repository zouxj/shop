<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shenyu.laikaword.module.us.appsetting.acountbind.BoundPhoneActivity">
<include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_marginTop="31dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_login_rectangle"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="26dp"
                android:text="+86"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/color_666"
                android:textSize="@dimen/text_size_14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="1dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/login_bg"
                android:layout_height="10dp" />
            <com.shenyu.laikaword.ui.view.widget.ClearEditText
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginLeft="5dp"
                android:id="@+id/et_use_phone"
                android:hint="请输入手机号"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_ccc"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:layout_height="35dp"
                android:maxLength="11"
                android:background="@null"
                android:inputType="phone"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <RelativeLayout
            android:layout_height="48dp"
            android:layout_width="310dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/bg_login_rectangle"
            >
            <EditText
                android:textCursorDrawable="@drawable/color_cursor"
                android:id="@+id/et_user_msg_code"
                android:layout_width="131dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:maxLength="6"
                android:textSize="@dimen/text_size_14sp"
                android:hint="请输入短信验证码"
                android:gravity="center_vertical"
                android:textColor="@color/color_333"
                android:layout_marginLeft="25dp"
                android:inputType="number"
                android:background="@null"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tv_send_msg_code"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/app_theme_red"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:text="获取验证码"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <TextView
            android:layout_marginTop="37dp"
            android:id="@+id/bt_login"
            android:layout_height="43dp"
            android:layout_width="310dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/bg_bt_login_rectangle_light"
            android:layout_gravity="center" />

    </LinearLayout>
</LinearLayout>
