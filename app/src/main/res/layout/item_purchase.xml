<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="178dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <TextView
            android:id="@+id/tv_goumai_time"
            style="@style/tv_car_goumai"
            android:text="编号:201700531" />
        <TextView
            style="@style/bank_add_edite"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="2017-5-12 15：:3"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="97dp">

        <ImageView
            android:id="@+id/iv_goumai_img"
            android:layout_marginLeft="14dp"
            android:layout_width="106dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/yidong_icon"
            android:layout_height="70dp" />
        <RelativeLayout
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:id="@+id/tv_goumai_shop_name"
                android:text="100元移动充值卡"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/tv_goumai_shop_name"
                android:id="@+id/tv_goumai_shop_price"
                android:layout_width="wrap_content"
                android:layout_marginTop="13dp"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/color_333"
                android:text="x10张"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/color_fafa"
        android:layout_height="65dp">
        <TextView
            android:layout_marginLeft="9dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@mipmap/pay_qq_icon"
            android:id="@+id/tv_goumai_indent_no"
            android:drawablePadding="7dp"
            android:textSize="@dimen/text_size_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:text="来卡小猪 12391231233"
            />
        <TextView
            android:id="@+id/tv_goumai_count"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_333"
            android:layout_alignParentRight="true"
            android:text="合计： ￥900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/tv_goumai_indent_no"
            android:background="@color/color_fafa"
            android:layout_width="wrap_content"
            android:layout_marginLeft="32dp"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_333"
            android:text="广东深圳市南山高新园泰邦科技大厦"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>
