<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shenyu.laikaword.module.mine.systemsetting.activity.SettingSystemActivity">
<include layout="@layout/toolbar_layout"/>
   <RelativeLayout
       android:id="@+id/set_rl_user_info"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="55dp">

       <TextView
           android:layout_width="wrap_content"
           android:text="个人资料"
           android:layout_centerVertical="true"
           android:layout_height="wrap_content" />
       <TextView
           android:padding="10dp"
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:text=">"
           android:layout_height="wrap_content" />

    <include layout="@layout/line_bottom_view"/>

   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_rl_user_acount_bd"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="账号绑定"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:text=">"
            android:layout_height="wrap_content" />

        <include layout="@layout/line_bottom_view"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/set_rl_about"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="关于我们"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:text=">"
            android:layout_height="wrap_content" />

        <include layout="@layout/line_bottom_view"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/set_tv_exit"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:text="退出账号"
        android:layout_height="55dp" />
</LinearLayout>
