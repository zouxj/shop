<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout"/>
<android.support.v4.widget.NestedScrollView
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/ry_lv"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_zhekou"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text_size_13sp"
                android:textColor="@color/color_999"
                android:layout_width="wrap_content"
                android:text="设置转卖折扣（6.0-9.7折）"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.shenyu.laikaword.ui.view.widget.GoodsViewGroup
                    android:layout_width="320dp"
                    android:id="@+id/goods_viewgroup"
                    android:layout_marginTop="10dp"
                    android:layout_height="55dp"
                    app:horPadding="20dip"
                    app:verPadding="5dip"/>

            </LinearLayout>


<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_marginTop="19dp"
    android:layout_height="wrap_content">
    <com.shenyu.laikaword.ui.view.widget.AmountView
        android:id="@+id/av_zj"
        android:layout_width="320dp"
        android:layout_height="47dp"
        app:btnTextSize="18sp"
        app:btnWidth="89dp"
        app:btnHeight="47dp"
        app:tvWidth="140dp"
        >
    </com.shenyu.laikaword.ui.view.widget.AmountView>
</LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="124dp">
            <TextView
                android:textColor="@color/app_theme_red"
                android:textSize="@dimen/text_size_12sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:text="*微信提示\n 1.转卖完以后,可在个人中心 ”我的余额“中提现。\n 2.设置的专卖折扣越低,转卖速度更快。"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">



        <TextView
            android:id="@+id/tv_add_code"
            android:textSize="15sp"
            android:textColor="@color/color_999"
            android:gravity="center"
            android:layout_weight="1"
            android:text="转卖总额"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_zhuamai"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="确认转卖"

            android:background="@color/app_theme_red"
            android:layout_width="137dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
