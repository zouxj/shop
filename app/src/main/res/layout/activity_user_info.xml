<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shenyu.laikaword.module.mine.systemsetting.activity.UserInfoActivity">
<include layout="@layout/toolbar_layout"/>

    <RelativeLayout
        android:id="@+id/set_rl_user_info"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="55dp">

        <TextView

            android:layout_width="wrap_content"
            android:text="个人头像"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <com.shenyu.laikaword.widget.CircleImageView
            android:id="@+id/set_change_user_head"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="50dp" />

        <include layout="@layout/line_bottom_view"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/change_tv_name"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:text="xxxx"
            android:layout_height="wrap_content" />

        <include layout="@layout/line_bottom_view"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="手机号"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:text="132xxxx4341"
            android:layout_height="wrap_content" />

        <include layout="@layout/line_bottom_view"/>

    </RelativeLayout>
</LinearLayout>
