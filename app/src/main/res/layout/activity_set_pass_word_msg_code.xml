<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shenyu.laikaword.module.us.setpassword.SetPassWordMsgCodeActivity">
<include layout="@layout/toolbar_layout"/>
    <TextView
        android:id="@+id/tv_ms_code"
        android:layout_marginTop="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        style="@style/setpassword_text"
        android:textSize="16sp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_send_msg_phone"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        style="@style/setpassword_text"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="55dp">
        <EditText
            android:id="@+id/tv_msg_code"
            android:maxLength="6"
            android:inputType="number"
            android:textSize="16sp"
            android:hint="请输入短信验证码"
            android:layout_alignParentBottom="true"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/edite_bottom"
            android:layout_width="250dp"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/tv_down_time"
            android:layout_width="wrap_content"
            android:inputType="number"
            android:text="获取验证码"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/app_theme_red"
            android:textSize="@dimen/text_size_14sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</LinearLayout>
