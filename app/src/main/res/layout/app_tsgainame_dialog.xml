<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:showDividers="middle">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:background="@mipmap/tishigai_name_icon"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<LinearLayout
    android:background="@drawable/dialog_update_app_bg"
    android:orientation="vertical"
    android:layout_marginTop="19dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_msg"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从今日起,来卡商城正式更名为"
        android:textColor="@color/color_333"
        android:textSize="16sp" />
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【淘卡商城】"
        android:textColor="@color/app_theme_red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bt_commit"
        android:layout_margin="25dp"
        android:layout_width="115dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_bt_login_rectangle_light"
        android:text="知道了"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"

        android:layout_height="45dp" />
</LinearLayout>
</LinearLayout>