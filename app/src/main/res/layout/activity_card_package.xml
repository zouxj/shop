<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray"
    android:orientation="vertical"
    tools:context=".module.us.goodcards.ui.activity.CardPackageActivity">
<include layout="@layout/toolbar_layout"/>
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        app:elevation="0dp"
        android:layout_height="wrap_content">
    <android.support.design.widget.TabLayout
    android:id="@+id/tb_car_pack"
        android:layout_width="match_parent"
        android:paddingBottom="0dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        app:tabIndicatorColor="@color/app_theme_red"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/app_theme_red"
        app:tabTextColor="@color/color_333">

    </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_car_pack"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
