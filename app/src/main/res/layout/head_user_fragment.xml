<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_theme_red_40">

    <RelativeLayout
        android:id="@+id/ly_user_head"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/left_bg_icon"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_user_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:src="@mipmap/left_user_icon" />


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/tv_user_head"
            android:text="未登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp" />

        <ImageView
            android:id="@+id/iv_seting"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/lfet_setting_icon"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>