<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/app_theme_red"
    android:orientation="horizontal"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/bt_top_img"
    android:layout_gravity="center_vertical"
    android:layout_width="30dp"
    android:layout_marginLeft="13dp"
    android:src="@mipmap/left_user_icon"
    android:layout_height="30dp" />
    <LinearLayout
        android:layout_marginLeft="13dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_search_rectangle"
        android:layout_height="32dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/app_main_serchar_icon"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="搜索商品,选你喜欢的"
            android:background="@null"
            android:layout_marginLeft="8dp"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:layout_width="200dp"
            android:layout_gravity="center_vertical"
            android:layout_height="28dp" />
    </LinearLayout>


<ImageView
    android:layout_marginLeft="13dp"
    android:layout_width="wrap_content"
    android:layout_gravity="right|center_vertical"
    android:layout_marginRight="12dp"
    android:layout_centerVertical="true"
    app:layout_scrollFlags="scroll|enterAlways"
    android:background="@mipmap/app_main_message_icon"
    android:layout_height="wrap_content" />

</LinearLayout>
