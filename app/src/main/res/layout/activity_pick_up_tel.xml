<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray"
    android:orientation="vertical"
    tools:context="com.shenyu.laikaword.module.goods.pickupgoods.ui.activity.PickUpActivity">
    <include layout="@layout/toolbar_layout"/>
    <include layout="@layout/include_tihuo_layout"/>

    <LinearLayout
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="112dp">

        <TextView
            android:layout_marginTop="23dp"
            android:text="充值手机号"
            style="@style/bank_add_one"/>

        <com.shenyu.laikaword.ui.view.widget.ClearEditText
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="13"
            android:layout_marginLeft="9dp"
            android:id="@+id/tv_tihuo_tianxia"
            android:textSize="25sp"
            android:layout_width="220dp"
            android:hint="请输入电话号码"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_moren"
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:text="默认账户绑定号码"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_999"
            android:textSize="@dimen/text_size_12sp"
            android:layout_height="wrap_content" />
        <include layout="@layout/line_view"/>

    </LinearLayout>

    <include layout="@layout/include_tihuo_bottom_layout"/>
</LinearLayout>
