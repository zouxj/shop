<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shenyu.laikaword.module.us.appsetting.acountbind.ui.activity.ChangeBindPhoneActivity">
<include layout="@layout/toolbar_layout"/>

    <TextView
        android:layout_marginLeft="9dp"
        android:layout_marginTop="18dp"
        android:text="输入新手机号码"
        android:textColor="@color/color_333"
        android:textSize="@dimen/dp_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="9dp"
        android:layout_marginLeft="9dp"
        android:textSize="@dimen/text_size_13sp"
        android:text="输入新手机号码后,下次可使用新手号登录"
        android:textColor="@color/color_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_current_phone"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="9dp"
        android:textSize="@dimen/text_size_13sp"
        android:text="当前手机号码:"
        android:textColor="@color/color_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_phome"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="9dp"
        android:text="手机号码"
        android:textColor="@color/color_333"
        android:textSize="@dimen/dp_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="9dp"
            android:text="+86"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_333"
            android:textSize="@dimen/dp_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/tv_msg_code"
            android:maxLength="6"
            android:inputType="number"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edite_bottom"
            android:layout_width="267dp"
            android:layout_height="52dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_change_bing_phone"
        android:layout_width="307dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17sp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_gray_icon"
        android:gravity="center"
        android:layout_height="43dp" />
    </LinearLayout>
