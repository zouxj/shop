<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/main_bg_gray"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shenyu.laikaword.module.us.appsetting.aboutus.AboutAppActivity">
<include layout="@layout/toolbar_layout"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawableTop="@mipmap/ic_launcher"
        android:drawablePadding="2dp"
        android:textColor="@color/color_999"
        android:textSize="@dimen/text_size_12sp"
        android:text="淘卡商城1.0"
        android:layout_marginTop="48dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_new_version"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawablePadding="2dp"
        android:textColor="@color/app_theme_red"
        android:textSize="@dimen/text_size_12sp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="57dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="9dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_server"
            android:layout_width="match_parent"
            android:textColor="@color/color_999"
            android:text="服务协议"
            android:gravity="center_vertical"
            android:layout_height="48dp" />
        <include layout="@layout/line_view"/>
        <TextView
            android:id="@+id/tv_check_update"
            android:layout_width="match_parent"
            android:textColor="@color/color_999"
            android:text="检查更新"
            android:gravity="center_vertical"
            android:layout_height="48dp" />
        <include layout="@layout/line_view"/>
        <TextView
            android:id="@+id/tv_get_pignfen"
            android:layout_width="match_parent"
            android:textColor="@color/color_999"
            android:text="给个评分吧"
            android:gravity="center_vertical"
            android:layout_height="48dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:text="@string/service_date"
            android:textColor="@color/color_999"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:text="@string/service_number"
            android:textColor="@color/color_999"
            android:textSize="@dimen/text_size_18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_version_ch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="15dp"
            android:textColor="@color/color_999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_version_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_999"
            android:textSize="10sp" />
    </RelativeLayout>
</LinearLayout>
