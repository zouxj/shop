<?xml version="1.0" encoding="utf-8"?>
<com.shenyu.laikaword.ui.view.widget.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:minHeight="68dp"
    android:background="@color/white"
    android:layout_height="68dp">

<LinearLayout
    android:minWidth="1000dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_bank_log"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="39dp"
        android:layout_height="39dp" />

            <LinearLayout
                android:minWidth="1000dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_toRightOf="@+id/cb_bank_name"
                    android:id="@+id/tv_card_bank"
                    android:text="招商银行"
                    android:layout_marginLeft="9dp"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/text_size_15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_bank_no"
                    android:text="12312"
                    android:layout_marginLeft="9dp"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/text_size_15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/item_delete"
        android:layout_width="77dp"
        android:layout_height="match_parent"
        android:background="#ed1b23"
        android:gravity="center"
        android:text="解绑"
        android:textColor="#ffffff"
        android:textSize="16sp" />
    </LinearLayout>
</com.shenyu.laikaword.ui.view.widget.SwipeItemLayout>



