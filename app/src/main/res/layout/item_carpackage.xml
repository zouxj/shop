<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iv_page_img"
            android:layout_marginLeft="15dp"
            android:layout_width="106dp"
            android:layout_gravity="center_vertical"
            android:layout_height="70dp" />
        <RelativeLayout
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/tv_page_name"
                android:text="100元移动充值卡"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/text_size_13sp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_kpage_count"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:gravity="bottom"
                android:textColor="@color/color_333"
                android:text="数量:50张"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tihuo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_tihuo"
                android:layout_alignParentRight="true"
                android:text="提货"
                android:enabled="true"
                android:layout_centerVertical="true"
                android:textColor="@color/app_theme_red"
                android:textSize="@dimen/text_size_13sp"
                android:gravity="center"
                android:background="@drawable/bg_paysuccess_border_rectangle"
                android:layout_marginRight="10dp"
                android:layout_width="63dp"
                android:layout_height="29dp" />
        </RelativeLayout>

    </LinearLayout>

