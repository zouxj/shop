<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="68dp"
    android:minWidth="1000dp"
    android:background="@color/white"
    android:layout_height="68dp">
<RelativeLayout
    android:id="@+id/item_ck"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_bandlog_img"
        android:layout_marginLeft="9dp"
        android:src="@drawable/cicle_point_write"
        android:layout_centerVertical="true"
        android:layout_width="39dp"
        android:layout_height="39dp" />
    <CheckBox
        android:id="@+id/cb_bank_name"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:layout_marginLeft="9dp"
        style="@style/check_box_bank" />
    <LinearLayout
        android:layout_toRightOf="@+id/iv_bandlog_img"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_card_bank"
            android:text="招商银行(1231)"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:textColor="@color/color_333"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_card_num"
            android:layout_marginLeft="9dp"
            android:textColor="@color/color_333"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>

