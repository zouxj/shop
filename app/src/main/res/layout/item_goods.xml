<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="178dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="39dp">
<TextView
    android:id="@+id/tv_goumai_time"
   style="@style/tv_car_goumai"
   />
    <TextView
        style="@style/tv_car_jiaoyi"
        android:id="@+id/tv_goumai_state"
        android:layout_marginRight="10dp"
      />
</RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/main_bg_gray"
        android:layout_width="match_parent"
        android:layout_height="97dp">

        <ImageView
            android:id="@+id/iv_goumai_img"
            android:layout_marginLeft="14dp"
            android:layout_width="106dp"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp" />
        <RelativeLayout
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/tv_goumai_shop_name"
                android:layout_marginTop="9dp"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="32dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="20dp">
                    <TextView
                        android:id="@+id/tv_goumai_shop_price"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_size_12sp"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom"
                        android:layout_marginLeft="11dp"
                        android:textColor="@color/color_333"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_goumai_shop_original_price"
                        android:textSize="10sp"
                        android:gravity="bottom"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/color_999"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_goumai_shop_price"
                        android:layout_marginLeft="6dp"
                         />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_goumai_shop_purchase"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/text_size_13sp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <TextView
            android:id="@+id/tv_goumai_indent_no"
            style="@style/tv_car_goumai"
            />
        <TextView
            android:id="@+id/tv_goumai_count"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_size_12sp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
